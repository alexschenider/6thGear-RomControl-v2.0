<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/vbuttons" />
    <PreferenceScreen android:title="@string/sb_left">
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/enable"
                android:key="agc_sb_left_visibility"
                android:defaultValue="false" />
        <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:entries="@array/agc_virtual_buttons_entries"
                android:title="@string/short_press"
                android:key="agc_sb_left_short_press"
                android:dependency="agc_sb_left_visibility"
                android:defaultValue="0"
                android:entryValues="@array/agc_virtual_buttons_values" />
        <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:entries="@array/agc_virtual_buttons_entries"
                android:title="@string/long_press"
                android:key="agc_sb_left_long_press"
                android:dependency="agc_sb_left_visibility"
                android:defaultValue="0"
                android:entryValues="@array/agc_virtual_buttons_values" />
        <com.wubydax.romcontrol.v2.prefs.IntentDialogPreference
                android:title="@string/short_press_app"
                android:key="agc_sb_left_short_app"
                android:dependency="agc_sb_left_visibility"
                app:intentSeparator="\##"
                app:showSearch="true" />
        <com.wubydax.romcontrol.v2.prefs.IntentDialogPreference
                android:title="@string/long_press_app"
                android:key="agc_sb_left_long_app"
                android:dependency="agc_sb_left_visibility"
                app:intentSeparator="\##"
                app:showSearch="true" />
        <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                android:defaultValue="#FF0000FF"
                android:dependency="agc_sb_left_visibility"
                android:key="agc_sb_left_bgcolor"
                android:title="@string/color"/>
    </PreferenceScreen>
