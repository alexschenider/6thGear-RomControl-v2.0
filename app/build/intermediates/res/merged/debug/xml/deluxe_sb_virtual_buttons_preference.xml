<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/vbuttons" />
    <PreferenceScreen android:title="@string/sb_left">
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/enable"
                android:key="statusbar_keybuttonview_izquierda"
                android:defaultValue="false" />
        <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:entries="@array/boton_virtual_izq_entries"
                android:title="@string/short_press"
                android:key="statusbar_lvb_click_value"
                android:dependency="statusbar_keybuttonview_izquierda"
                android:defaultValue="999"
                android:entryValues="@array/boton_virtual_izq_values" />
        <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:entries="@array/boton_virtual_izq_entries"
                android:title="@string/long_press"
                android:key="statusbar_lvb_long_click_value"
                android:dependency="statusbar_keybuttonview_izquierda"
                android:defaultValue="999"
                android:entryValues="@array/boton_virtual_izq_values" />
        <com.wubydax.romcontrol.v2.prefs.IntentDialogPreference
                android:title="@string/select_app"
                android:key="eragon_doubletap_home_app"
                app:intentSeparator="\##"
                app:showSearch="true" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/sb_center">
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/enable"
                android:key="statusbar_keybuttonview_centro"
                android:defaultValue="false" />
        <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:entries="@array/boton_virtual_cntr_entries"
                android:title="@string/short_press"
                android:key="statusbar_cvb_click_value"
                android:dependency="statusbar_keybuttonview_centro"
                android:defaultValue="999"
                android:entryValues="@array/boton_virtual_cntr_values" />
        <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:entries="@array/boton_virtual_cntr_entries"
                android:title="@string/long_press"
                android:key="statusbar_cvb_long_click_value"
                android:dependency="statusbar_keybuttonview_centro"
                android:defaultValue="999"
                android:entryValues="@array/boton_virtual_cntr_values" />
        <com.wubydax.romcontrol.v2.prefs.IntentDialogPreference
                android:title="@string/select_app"
                android:key="eragon_longpress_back_app"
                app:intentSeparator="\##"
                app:showSearch="true" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/sb_right">
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/enable"
                android:key="statusbar_keybuttonview_derecha"
                android:defaultValue="false" />
        <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:entries="@array/boton_virtual_drch_entries"
                android:title="@string/short_press"
                android:key="statusbar_rvb_click_value"
                android:dependency="statusbar_keybuttonview_derecha"
                android:defaultValue="999"
                android:entryValues="@array/boton_virtual_drch_values" />
        <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:entries="@array/boton_virtual_drch_entries"
                android:title="@string/long_press"
                android:key="statusbar_rvb_long_click_value"
                android:dependency="statusbar_keybuttonview_derecha"
                android:defaultValue="999"
                android:entryValues="@array/boton_virtual_drch_values" />
        <com.wubydax.romcontrol.v2.prefs.IntentDialogPreference
                android:title="@string/select_app"
                android:key="eragon_longpress_home_app"
                app:intentSeparator="\##"
                app:showSearch="true" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/navbar_right">
        <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/enable"
                android:key="navbar_keybuttonview_derecha"
                android:defaultValue="false" />
        <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:entries="@array/boton_virtual_nav_entries"
                android:title="@string/short_press"
                android:key="navbar_nvb_click_value"
                android:dependency="navbar_keybuttonview_derecha"
                android:defaultValue="999"
                android:entryValues="@array/boton_virtual_nav_values" />
        <com.wubydax.romcontrol.v2.prefs.MyListPreference
                android:entries="@array/boton_virtual_nav_entries"
                android:title="@string/long_press"
                android:key="navbar_nvb_long_click_value"
                android:dependency="navbar_keybuttonview_derecha"
                android:defaultValue="999"
                android:entryValues="@array/boton_virtual_nav_values" />
        <com.wubydax.romcontrol.v2.prefs.IntentDialogPreference
                android:title="@string/select_app"
                android:key="eragon_longpress_menu_app"
                app:intentSeparator="\##"
                app:showSearch="true" />
    </PreferenceScreen>
    <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
            android:title="@string/kill_on_long_press"
            android:key="araul_back_key"
            android:defaultValue="0" />
</PreferenceScreen>