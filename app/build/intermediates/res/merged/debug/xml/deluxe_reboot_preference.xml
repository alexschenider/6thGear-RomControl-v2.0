<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceScreen android:title="@string/elementstoshow">
        <PreferenceCategory android:title="@string/elementstoshowmin">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/shutdown"
                android:key="agc_rebootmenu_shutdown"
                android:defaultValue="true" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/ereboot"
                android:key="agc_rebootmenu_reboot"
                android:defaultValue="true" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/rebootrecovery"
                android:key="agc_rebootmenu_recovery"
                android:defaultValue="false" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/rebootdownload"
                android:key="agc_rebootmenu_download" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/emergencymode"
                android:key="agc_rebootmenu_emergency_mode"
                android:defaultValue="true" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/datamobile"
                android:key="agc_rebootmenu_mobile_data"
                android:defaultValue="false" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/flashlight"
                android:key="agc_rebootmenu_flashlight"
                android:defaultValue="false" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/assistence"
                android:key="agc_rebootmenu_assistence"
                android:defaultValue="false" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/recordscreen"
                android:key="agc_rebootmenu_recordscreen"
                android:defaultValue="false" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/screenshot"
                android:key="agc_rebootmenu_screenshot"
                android:defaultValue="false" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/settings"
                android:key="agc_rebootmenu_settings"
                android:defaultValue="false" />
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                android:title="@string/drc"
                android:key="agc_rebootmenu_romcontrol"
                android:defaultValue="false" />
        </PreferenceCategory>
    </PreferenceScreen>
    <com.wubydax.romcontrol.v2.prefs.ThumbnailListPreference
        app:drawableArray="@array/drawables_icono_reinicio"
        android:title="@string/select_style"
        android:key="reboot_menu_style"
        android:defaultValue="0"
        app:entryList="@array/rebootmenu_style_entries"
        app:entryValuesList="@array/rebootmenu_style_values" />
    <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
        android:title="@string/ask_confirmation"
        android:defaultValue="1"
        android:key="agc_show_confirmations" />
</PreferenceScreen>