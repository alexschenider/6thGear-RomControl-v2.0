<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="Ajustes de tráfico de red (¡Habilitad solo uno!)"/>
    <PreferenceScreen android:title="Tráfico de red a la izquierda">
        <PreferenceCategory android:title="Tráfico de red">
            <com.wubydax.romcontrol.v2.prefs.MyListPreference
                    android:title="Información a mostrar"
                    android:key="network_traffic_state_left"
                    android:defaultValue="0"
                    app:dependentValue="0"
                    android:entryValues="@array/traffic_state_values"
                    android:entries="@array/traffic_state_items"/>
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                    android:title="Mostrar en bytes"
                    android:defaultValue="false"
                    android:key="network_traffic_unit_left"
                    android:dependency="network_traffic_state_left"/>
        </PreferenceCategory>
        <PreferenceCategory android:title="Preferencias de flechas" android:dependency="network_traffic_state_left">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                    android:title="Mostrar flechas"
                    android:key="network_traffic_show_arrows_left"
                    android:defaultValue="true"
                    android:dependency="network_traffic_state_left"/>
            <com.wubydax.romcontrol.v2.prefs.MyListPreference
                    android:title="Posición"
                    android:key="network_traffic_arrows_position_left"
                    android:dependency="network_traffic_show_arrows_left"
                    android:defaultValue="0"
                    android:entryValues="@array/arrow_position_values"
                    android:entries="@array/arrow_position_entries"/>
        </PreferenceCategory>
        <PreferenceCategory android:title="Opciones de visualización" android:dependency="network_traffic_state_left">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                    android:title="Esconder con bajo tráfico"
                    android:key="network_traffic_autohide_left"
                    android:defaultValue="false" />
            <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference
                    android:title="Esconde por debajo de"
                    app:unitsValue="Kb"
                    app:maxValue="100"
                    android:key="network_traffic_threshold_left"
                    android:defaultValue="10"
                    android:dependency="network_traffic_autohide_left"/>
            <com.wubydax.romcontrol.v2.prefs.MyListPreference
                    android:title="Fuente"
                    android:key="network_traffic_text_style_left"
                    android:defaultValue="0"
                    android:entries="@array/traffic_style_entries"
                    android:entryValues="@array/traffic_style_entry_values"/>
            <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference
                    android:title="Tamaño"
                    android:key="network_traffic_scale_left"
                    app:maxValue="10"
                    android:defaultValue="10"/>
        </PreferenceCategory>
        <PreferenceCategory android:title="Colores" android:dependency="network_traffic_state_left">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                    android:title="Separar colores"
                    android:key="network_traffic_global_color_left"
                    android:defaultValue="true"
                    android:summaryOn="Text and arrows can be colored separately"
                    android:summaryOff="Text color will apply to arrows as well"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                    android:title="Textos"
                    android:key="network_traffic_color_left"
                    android:defaultValue="#ffffff"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                    android:title="Flechas"
                    android:key="network_traffic_arrow_color_left"
                    android:defaultValue="#ffffff"
                    android:dependency="network_traffic_global_color_left"/>
        </PreferenceCategory>
    </PreferenceScreen>
    <PreferenceScreen android:title="Tráfico de red a la derecha">
        <PreferenceCategory android:title="Tráfico de red">
            <com.wubydax.romcontrol.v2.prefs.MyListPreference
                    android:title="Información a mostrar"
                    android:key="network_traffic_state"
                    android:defaultValue="0"
                    app:dependentValue="0"
                    android:entryValues="@array/traffic_state_values"
                    android:entries="@array/traffic_state_items"/>
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                    android:title="Mostrar en bytes"
                    android:defaultValue="false"
                    android:key="network_traffic_unit"
                    android:dependency="network_traffic_state"/>
        </PreferenceCategory>
        <PreferenceCategory android:title="Preferencias de flechas" android:dependency="network_traffic_state">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                    android:title="Mostrar flechas"
                    android:key="network_traffic_show_arrows"
                    android:defaultValue="true"
                    android:dependency="network_traffic_state"/>
            <com.wubydax.romcontrol.v2.prefs.MyListPreference
                    android:title="Posición"
                    android:key="network_traffic_arrows_position"
                    android:dependency="network_traffic_show_arrows"
                    android:defaultValue="0"
                    android:entryValues="@array/arrow_position_values"
                    android:entries="@array/arrow_position_entries"/>
        </PreferenceCategory>
        <PreferenceCategory android:title="Opciones de visualización" android:dependency="network_traffic_state">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                    android:title="Esconder con bajo tráfico"
                    android:key="network_traffic_autohide"
                    android:defaultValue="false" />
            <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference
                    android:title="Esconde por debajo de"
                    app:unitsValue="Kb"
                    app:maxValue="100"
                    android:key="network_traffic_threshold"
                    android:defaultValue="10"
                    android:dependency="network_traffic_autohide"/>
            <com.wubydax.romcontrol.v2.prefs.MyListPreference
                    android:title="Fuente"
                    android:key="network_traffic_text_style"
                    android:defaultValue="0"
                    android:entries="@array/traffic_style_entries"
                    android:entryValues="@array/traffic_style_entry_values"/>
            <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference
                    android:title="Tamaño"
                    android:key="network_traffic_scale"
                    app:maxValue="10"
                    android:defaultValue="10"/>
        </PreferenceCategory>
        <PreferenceCategory android:title="Colores" android:dependency="network_traffic_state">
            <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
                    android:title="Separar colores"
                    android:key="network_traffic_global_color"
                    android:defaultValue="true"
                    android:summaryOn="Text and arrows can be colored separately"
                    android:summaryOff="Text color will apply to arrows as well"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                    android:title="Textos"
                    android:key="network_traffic_color"
                    android:defaultValue="#ffffff"/>
            <com.wubydax.romcontrol.v2.prefs.ColorPickerPreference
                    android:title="Flechas"
                    android:key="network_traffic_arrow_color"
                    android:defaultValue="#ffffff"
                    android:dependency="network_traffic_global_color"/>
        </PreferenceCategory>
    </PreferenceScreen>
</PreferenceScreen>